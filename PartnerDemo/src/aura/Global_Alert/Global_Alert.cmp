<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global" >
    <ltng:require styles="/resource/SLDS103/assets/styles/salesforce-lightning-design-system-ltng.css" />
    <aura:attribute name="title" type="String" default="Hi Ajay!, Welcome to your lightining apps"/>
    <aura:attribute name="btnName" type="button" default="button name"/>
    
    <div class="slds" >
    	<article class="slds-card">
            
              <div aura:id="header" class="slds-card__header slds-grid">               
                <span class="slds-text-heading--medium">{!v.title}</span>
              </div> 
            
            	<br />                         
              
              <div aura:id="buttonId" class="slds-no-flex">
                  <button class="slds-button slds-button--neutral">{!v.btnName}</button>
              </div>
            
              <div class="slds-card__body"></div>
              <div class="slds-card__footer"></div>
          </article>  
    </div>
</aura:component>